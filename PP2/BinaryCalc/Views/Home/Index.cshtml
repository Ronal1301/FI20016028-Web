@model BinaryCalc.Models.BinaryViewModel
@{
    ViewData["Title"] = "Calculadora Binaria";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

<div class="container py-4">
    <h1 class="mb-3">Calculadora Binaria</h1>
    <p class="text-muted">
        Escriba dos binarios (a y b). Solo 0s y 1s, con 2, 4, 6 u 8 dígitos (máximo 8).
    </p>

    <div class="card mb-4">
        <div class="card-body">
            <form method="post" novalidate>
                <div class="row g-3 align-items-end">
                    <div class="col-md-4">
                        <label asp-for="A" class="form-label">a</label>
                        <input asp-for="A" class="form-control" placeholder="Ej: 1010" />
                        <span class="text-danger" asp-validation-for="A"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="B" class="form-label">b</label>
                        <input asp-for="B" class="form-control" placeholder="Ej: 11" />
                        <span class="text-danger" asp-validation-for="B"></span>
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-primary">Calcular</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <partial name="_ValidationScriptsPartial" />

    @if (!ViewData.ModelState.IsValid && Context.Request.Method == "POST")
    {
        <div class="alert alert-warning mt-2">
            <strong>Validación:</strong> Revise que <em>a</em> y <em>b</em> cumplan las reglas (solo 0/1, largo 2/4/6/8, máx. 8).
        </div>
    }

    @if (Model.HasResults)
    {
        <h3 class="mb-3">Resultados</h3>
        <div class="table-responsive">
            <table class="table table-bordered align-middle">
                <thead class="table-light">
                    <tr>
                        <th></th>
                        <th>Bin</th>
                        <th>Oct</th>
                        <th>Dec</th>
                        <th>Hex</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in Model.Results)
                    {
                        <tr>
                            <td><strong>@r.Label</strong></td>
                            <td><code>@r.Bin</code></td>
                            <td>@r.Oct</td>
                            <td>@r.Dec</td>
                            <td>@r.Hex</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
